<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:id="@+id/search_layout"
    android:visibility="gone"
    android:elevation="4dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/searchHintText_searchToolbar"
        android:textColorHint="@color/searchHintColor_searchToolbar"
        android:textColor="@color/searchTextColor_searchToolbar"
        android:background="@null"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="@dimen/search_view_padding_searchToolbar"
        android:paddingRight="@dimen/search_view_padding_searchToolbar"
        android:textSize="16sp"/>


    <ImageButton
        android:id="@+id/ic_arrowBack"
        style="@style/searchToolbar_imageButtonStyle"
        android:src="@drawable/ic_arrow_back"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        style="@style/searchToolbar_imageButtonStyle"
        android:id="@+id/ic_clear"
        android:src="@drawable/ic_clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageButton
        style="@style/searchToolbar_imageButtonStyle"
        android:id="@+id/ic_mic"
        android:src="@drawable/ic_mic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"/>


</RelativeLayout>